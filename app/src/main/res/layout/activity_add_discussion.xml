<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="varma.com.myhome.AddDiscussionActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        />

    <EditText
        android:id="@+id/AllMembersTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:text="To All Members"
        android:ems="10" />

    <EditText
        android:id="@+id/DisTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/AllMembersTitle"
        android:ems="10"
         />

    <EditText
        android:id="@+id/DisDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DisTitle"
        android:ems="10"
        android:inputType="textMultiLine" />


</RelativeLayout>
