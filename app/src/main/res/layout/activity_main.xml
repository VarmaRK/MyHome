<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="varma.com.myhome.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
    />

    <Button
        android:id="@+id/btnNotifications"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:backgroundTint="@color/bg_login"
        android:text="Notifications"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:background="@color/colorPrimary" />

    <Button
        android:id="@+id/btnPhotos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNotifications"
        android:backgroundTint="@color/bg_login"
        android:text="Photos"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:background="@color/colorPrimary" />

    <Button
        android:id="@+id/btnFCM"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPhotos"
        android:backgroundTint="@color/bg_login"
        android:text="Firebase CM"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:background="@color/colorPrimary" />


    <TextView
        android:id="@+id/DiscussionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFCM"
        android:background="@color/bg_login"
        android:text="Discussions"
        android:textAlignment="center"
        android:textColor="@color/btn_login_bg"
        android:textSize="36sp" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridView"
        android:columnWidth="100dp"
        android:numColumns="3"
        android:layout_below="@+id/DiscussionLabel"
        android:stretchMode="columnWidth" />

</RelativeLayout>
